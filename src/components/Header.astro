---
const { breadcrumbs } = Astro.props;
---

<header class="bg-blue-600 text-white">
	<div class="container mx-auto px-4 py-4">
		<div class="flex justify-between items-center">
			<a href="/" class="text-2xl font-bold">FindATradesperson</a>
			<nav>
				<ul class="flex space-x-4">
					<li><a href="/" class="hover:underline">Home</a></li>
					<li><a href="/trades" class="hover:underline">Trades</a></li>
					<li><a href="/counties" class="hover:underline">Counties</a></li>
				</ul>
			</nav>
		</div>
		{breadcrumbs && (
			<nav class="text-sm mt-2">
				<ol class="list-none p-0 inline-flex">
					{breadcrumbs.map((crumb, index) => (
						<li class="flex items-center">
							{index > 0 && <span class="mx-2">/</span>}
							<a href={crumb.url} class="hover:underline">{crumb.text}</a>
						</li>
					))}
				</ol>
			</nav>
		)}
	</div>
</header>