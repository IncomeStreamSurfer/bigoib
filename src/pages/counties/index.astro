---
import Layout from '../../layouts/Layout.astro';
import Card from '../../components/Card.astro';
import counties from '../../data/counties.json';

const title = "Counties in Ireland - Find Tradespeople by Location";
const description = "Browse all counties in Ireland to find skilled tradespeople in your area. Discover local services across the country.";

const breadcrumbs = [
  { text: 'Home', url: '/' },
  { text: 'Counties', url: '/counties' }
];
---

<Layout title={title} description={description} breadcrumbs={breadcrumbs}>
	<h1 class="text-4xl font-bold mb-8">Counties in Ireland</h1>
	
	<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
		{counties.map((county) => (
			<Card
				href={`/counties/${county.slug}`}
				title={county.name}
				body={`Find tradespeople in ${county.name}. Browse towns and available services.`}
			/>
		))}
	</div>
</Layout>