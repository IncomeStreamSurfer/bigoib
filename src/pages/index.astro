---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import counties from '../data/counties.json';
import trades from '../data/trades.json';

const title = "Find Tradespeople in Ireland - Trades and Locations";
const description = "Discover reliable tradespeople across Ireland. Browse by county or trade to find skilled professionals for your project needs.";
---

<Layout title={title} description={description}>
	<h1 class="text-4xl font-bold mb-8 text-center">Find Tradespeople in Ireland</h1>
	
	<section class="mb-12">
		<h2 class="text-2xl font-semibold mb-4">Popular Trades</h2>
		<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
			{trades.slice(0, 6).map((trade) => (
				<Card
					href={`/trades/${trade.slug}`}
					title={trade.name}
					body={`Find skilled ${trade.name.toLowerCase()} across Ireland.`}
				/>
			))}
		</div>
		<div class="mt-4 text-center">
			<a href="/trades" class="inline-block bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition-colors duration-300">View All Trades</a>
		</div>
	</section>
	
	<section>
		<h2 class="text-2xl font-semibold mb-4">Browse by County</h2>
		<div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
			{counties.map((county) => (
				<a href={`/counties/${county.slug}`} class="bg-gray-200 rounded p-2 text-center hover:bg-gray-300 transition-colors duration-300">
					{county.name}
				</a>
			))}
		</div>
		<div class="mt-4 text-center">
			<a href="/counties" class="inline-block bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition-colors duration-300">View All Counties</a>
		</div>
	</section>
</Layout>